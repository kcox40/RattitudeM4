<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatecg.cs2340.rattitudem4">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainLoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterPageActivity" />
        <activity android:name=".WelcomePageActivity" />
        <activity
            android:name=".RatReportListActivity"
            android:label="@string/title_activity_rat_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReportSighting"
            android:label="@string/title_activity_report_sighting"
            android:parentActivityName=".WelcomePageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.gatecg.cs2340.rattitudem4.WelcomePageActivity" />
        </activity>
    </application>

</manifest>